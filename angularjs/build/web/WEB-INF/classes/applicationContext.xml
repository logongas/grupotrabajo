<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
 
    <!--Permite usar entre otras la anotaciÃ³n @Autowired -->
    <context:annotation-config/>
    <!--Permite usar entre otras las anotaciones @Component y @Controller -->
    <context:component-scan base-package="com.fpmislata.seguros.datos"/>
 
    <bean class="com.fpmislata.seguros.datos.hibernate.HibernateUtil" factory-method="getSessionFactory" />
    <bean class="com.fpmislata.seguros.datos.SeguroDAOImplHibernate" />
    <bean class="com.fpmislata.seguros.datos.UsuarioDAOImplHibernate" />

</beans>
